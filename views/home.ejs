<html>
    <head>
        <title> <%= title %> </title>
        <!-- bootstrap css cdn -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <!-- css file -->
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>

        <!-- main container -->
        <main class="col-10 col-md-7 mx-auto shadow-lg p-3 mt-5 mb-5 bg-white rounded">
            <!-- heading -->
            <div class="heading mb-5 d-flex justify-content-center">
                <h1>TODO App</h1>
            </div>

            <!-- form container 1-->
            <div>
                <form action="/task/add" method="POST">
                    <!-- inputs -->
                    <div class="d-flex flex-wrap">
                        <!-- description input -->
                        <div class="col-12 d-flex flex-column border-top border-bottom pt-2 pb-2">
                            <label for="description"><h3>Description</h3></label>
                            <input class="border-0" id="description" style="outline: none;" type="text" name="description" placeholder="What do you need to do?" required>
                        </div>
                        <!-- category input -->
                        <div class="col-6 d-flex flex-column border-bottom border-right pt-2 pb-2">
                            <label for="category"><h5>Category</h5></label>
                            <select class="border-0 bg-white" id="category" style="outline: none;" name="category" required>
                                <option value="personal">Personal</option>
                                <option value="work">Work</option>
                                <option value="school">School</option>
                                <option value="cleaning">Cleaning</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <!-- due date input -->
                        <div class="col-6 d-flex flex-column border-bottom pt-2 pb-2">
                            <label for="duedate"><h5>Due Date</h5></label>
                            <input class="border-0" id="duedate" style="outline: none;" type="date" name="duedate" required>  
                        </div>
                    </div>

                    <!-- submit button (add task) -->
                    <div class="mx-auto mt-2" style="width: 150px;">
                        <button class="btn btn-success mx-auto col-12" style="height: 50px;" type="submit">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            &nbsp;&nbsp;Add Task
                        </button>
                    </div>
                </form>
            </div>

            <!-- form container 2-->
            <div>
                <form action="/task/delete" method="POST"> 
                    <!-- submit button (delete task) -->
                    <div class="mx-auto mt-2 mb-3" style="width: 150px;">
                        <button class="mx-auto col-12 btn btn-danger" style="height: 50px;" type="submit">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                            Delete Tasks
                        </button>
                    </div>

                    <!-- tasks -->
                    <div>
                        <ul style="list-style-type: none;">

                            <% for(i of tasks){ %>
                            <!-- a task -->
                            <li id="task-tab" class="border-top pt-2 ml-n4 d-flex overflow-hidden">
                   
                                <input class="mt-3 jjj" id="<%= i.id %>" type="checkbox" name="task" value="<%= i.id %>">  
                                <label for="<%= i.id %>" class="ml-3 d-flex col-11 justify-content-between">
                                    <div class="col-6" style="width: 200px;">
                                        <!-- description -->
                                        <p class="ml-n4 scrollbar scrollbar-pink bordered-pink thin  col-12 overflow-auto"> <%= i.description %> <p>
                                        <!-- date -->
                                        <p class="mt-n2 text-black-50" style="font-size: small;">
                                            <i class="fa fa-calendar" aria-hidden="true"></i>
                                            <%= i.duedate %>
                                        </p>
                                    </div>
                                    <!-- category block -->
                                    <div class="border col-3 rounded-lg d-flex justify-content-center" style="height: 50px; background-color: <%=i.color%>;">
                                        <p class="mt-2" style="color: honeydew;">
                                            <%= i.category %>
                                        </p>
                                    </div>
                                </label>
                            </li>
                            <% } %>

                        </ul>
                    </div>
                </form>
            </div>

        </main>

        <!-- bootstrap js cdn -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

         <!-- font awesome cdn -->
         <script src="https://kit.fontawesome.com/c90807128e.js" crossorigin="anonymous"></script>

        <!-- jQuery cdn -->
        <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>

        <!-- java script file -->
        <script src="/js/home.js"></script>
    </body>
</html>